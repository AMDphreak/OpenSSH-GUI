<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="OpenSSH_GUI.App"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:openSshGui="clr-namespace:OpenSSH_GUI"
             xmlns:semi="https://irihi.tech/semi"
             RequestedThemeVariant="Default">
    <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="Resources/Styles/ISshKeyStyles.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <Application.DataTemplates>
        <openSshGui:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <semi:SemiTheme/>
        <StyleInclude Source="avares://Semi.Avalonia.DataGrid/Index.axaml" />
        <avalonia:MaterialIconStyles />
        <Style Selector="ToolTipPresenter">
            <Setter Property="Background" Value="{DynamicResource ThemeControlHighBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource ThemeForegroundBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource ThemeControlMidBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="8,6" />
            <Setter Property="CornerRadius" Value="6" />
        </Style>
    </Application.Styles>

    <TrayIcon.Icons>
        <TrayIcons>
            <TrayIcon Icon="/Assets/appicon.ico" ToolTipText="OpenSSH-GUI">
                <TrayIcon.Menu>
                    <NativeMenu>
                        <NativeMenuItem Header="Close" Click="CloseProgram" />
                    </NativeMenu>
                </TrayIcon.Menu>
            </TrayIcon>
        </TrayIcons>
    </TrayIcon.Icons>

</Application>